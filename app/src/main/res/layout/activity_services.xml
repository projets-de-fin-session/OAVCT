<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="380sp"
        android:layout_marginEnd="60sp"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backgroound_input"
        android:id="@+id/viewFliper"
        />

    <Button
        android:id="@+id/bouton1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/backgroound_input"
        android:backgroundTint="@color/black"
        android:text="Vehicule Insurance Renewal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bouton2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/backgroound_input"
        android:backgroundTint="@color/black"
        android:text="Expertise request  appointment"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/bouton3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30sp"
        android:layout_below="@+id/bouton2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/backgroound_input"
        android:backgroundTint="@color/black"
        android:text="Change in vehicle use"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bouton4"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30sp"
        android:layout_below="@+id/bouton3"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/backgroound_input"
        android:backgroundTint="@color/black"
        android:text="Vehicle blocking request"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bouton5"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30sp"
        android:layout_below="@+id/bouton4"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/backgroound_input"
        android:backgroundTint="@color/black"
        android:text="Online transaction payment"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bouton6"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30sp"
        android:layout_below="@+id/bouton5"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/backgroound_input"
        android:backgroundTint="@color/black"
        android:text="Consultation of files"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/bouton7"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30sp"
        android:layout_below="@+id/bouton6"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/backgroound_input"
        android:backgroundTint="@color/black"
        android:text="Transaction history"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>